# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./humanizer.db

# Agent Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=4096
TEMPERATURE=1.0

# File Upload
MAX_FILE_SIZE_MB=10
# ALLOWED_EXTENSIONS uses default value from config.py: ['.txt','.md','.doc','.docx','.pdf']
# To override, use JSON array format:
# ALLOWED_EXTENSIONS=['.txt','.md','.pdf']

# Session Configuration
SESSION_TIMEOUT_HOURS=24
MAX_CHECKPOINTS=10
